name: intraday-engine

on:
  schedule:
    - cron: "39 3 * * 1-5"      # 09:09 IST pre-open
    - cron: "*/15 4-10 * * 1-5" # every 15 min market hours
  workflow_dispatch:

jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"
      - run: pip install pandas requests yfinance
      - run: python intraday_engine.py
        env:
          TG_BOT_TOKEN: ${{ secrets.TG_BOT_TOKEN }}
          TG_CHAT_ID: ${{ secrets.TG_CHAT_ID }}
